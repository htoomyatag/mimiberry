<div class="container">
<h1>Editing order</h1>


 <%= form_for @order, :html => {:class =>"form-horizontal"} do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :status %><br>
    <%= f.select(:status, Order::STATUS) %>
  </div>

  <div class="form-group">
    <%= f.label :customer_name %><br>
    <%= f.text_field :customer_name , :class=>"form-control"%>
  </div>
  <div class="form-group">
    <%= f.label :nrc %><br>
    <%= f.text_field :nrc, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :contact_phone %><br>
    <%= f.text_field :contact_phone, :class=>"form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :shipping_address %><br>
    <%= f.text_field :shipping_address, :class=>"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
